# Server Configuration
SERVER_PORT=3001
SERVER_HOST=localhost

# CORS Configuration
CORS_ORIGIN=*

# Monad Testnet RPC URL
# Option 1: Alchemy (Recommended)
MONAD_RPC_URL=https://monad-testnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Option 2: Official Monad RPC
# MONAD_RPC_URL=https://testnet-rpc.monad.xyz

# Master Wallet (For deploying and funding bots)
# ⚠️ IMPORTANT: Never commit real private keys!
# Get test MON from: https://faucet.monad.xyz
MASTER_PRIVATE_KEY=your_private_key_here

# Bot Funding Amount (in wei)
# Default: 100000000000000000 (0.1 MON)
BOT_FUND_WEI=100000000000000000

# Gas Configuration
GAS_LIMIT=100000

# Test Limits
MAX_BOTS=100
MAX_BURST_SIZE=100

# Optional: Already deployed contracts
PROBE_ADDRESS=
RESULT_ADDRESS=
